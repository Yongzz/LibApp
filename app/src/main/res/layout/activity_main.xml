<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">
    <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="Books"
            android:id="@+id/btnBooks"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="Loans"
            android:id="@+id/btnLoans" android:layout_below="@+id/btnBooks" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="Add Book"
            android:id="@+id/btnNewBook"
            android:layout_below="@+id/btnLoans" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="Issue Loan"
            android:id="@+id/btnNewLoan" android:layout_below="@+id/btnNewBook" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="Exit"
            android:id="@+id/btnClose" android:layout_below="@+id/btnNewLoan" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>
